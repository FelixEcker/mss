sector .config
  fields mariebuild:
    list files 'mb:bulk'

    str comp_cmd 'sh -c "cd $(file) && mb -q -n -m release && mv $(file) ../bin/ && echo :: build for $(file) finished"'

sector .scripts
  lines prepare:
#!/usr/bin/bash
echo :: getting sources...
git submodule init
git submodule update --remote --merge

if [[ -d bin ]]; then
  echo :: removing old binaries
  rm -rf bin/
fi

mkdir bin/
